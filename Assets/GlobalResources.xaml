<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="SciFiButtonTemplate" TargetType="Button">
    <Border
      x:Name="BackgroundBorder"
      Padding="{TemplateBinding Padding}"
      Background="#FF1E3E80"
      BorderBrush="#FF00DFFF"
      BorderThickness="1"
      CornerRadius="4">
      <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
    </Border>

    <ControlTemplate.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF2A5CB0" />
        <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF33EEFF" />
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF0F2050" />
        <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF00AACC" />
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF333333" />
        <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF666666" />
        <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.5" />
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>

  <Style x:Key="SciFiButtonStyle" TargetType="Button">
    <Setter Property="Template" Value="{StaticResource SciFiButtonTemplate}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Padding" Value="20,10" />
    <Setter Property="Margin" Value="0,0,0,10" />
    <Setter Property="Cursor" Value="Hand" />
  </Style>

  <ControlTemplate x:Key="GymMembersListTemplate" TargetType="ListBox">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
      <ItemsPresenter />
    </ScrollViewer>
  </ControlTemplate>

  <ItemsPanelTemplate x:Key="GymMembersListPanel">
    <StackPanel Orientation="Vertical" />
  </ItemsPanelTemplate>

  <ControlTemplate x:Key="GymMemberContainerTemplate" TargetType="{x:Type ListBoxItem}">
    <Grid>
      <Ellipse
        Margin="4"
        Fill="SkyBlue"
        Opacity="0" />
      <Ellipse
        x:Name="selectedMember"
        Margin="-10"
        IsHitTestVisible="False" />
      <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
    </Grid>
    <ControlTemplate.Triggers>
      <Trigger Property="IsSelected" Value="true">
        <Setter TargetName="selectedMember" Property="Stroke" Value="#FF00DFFF" />
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>

  <Style
    x:Key="GymMemberContainerStyle"
    BasedOn="{StaticResource {x:Type ListBoxItem}}"
    TargetType="{x:Type ListBoxItem}">
    <Setter Property="Template" Value="{StaticResource GymMemberContainerTemplate}" />
    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
  </Style>
</ResourceDictionary>
