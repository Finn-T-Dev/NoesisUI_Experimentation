<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="1080"
  d:DesignWidth="1920"
  Background="Transparent"
  mc:Ignorable="d">
  <Grid x:Name="Master">
    <Grid x:Name="Background" Opacity="0.515">
      <Grid.Background>
        <ImageBrush ImageSource="Assets/scifi_main_menu.jpg" />
      </Grid.Background>
    </Grid>
    <Grid x:Name="Interaction" Style="{DynamicResource InterfaceLayout}">
      <Grid.RowDefinitions>
        <RowDefinition Height="64"/>
        <RowDefinition Height="80"/>
        <RowDefinition Height="948*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Text="GAME PAUSED" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource HeadingStyle}"/>
    </Grid>

    <!--  Health - Bottom Left  -->





  </Grid>
</Page>
